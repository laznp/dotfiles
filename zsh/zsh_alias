# Alias Infinitec SSH
alias infi-ubuntu="ssh -i ~/Downloads/InfiCert/cp-station-dev-key.pem -l ubuntu"
alias infi-ec2="ssh -i ~/Downloads/InfiCert/cp-station-dev-key.pem -l ec2-user"

# Alias Command
alias tg="terragrunt"
alias tf="terraform"
alias py="python2"
alias py3="python3"
alias v="nvim"
alias ls="$(which ls_extended)"
alias cat="$(which bat)"

# Run python3 on every filename with .py extension
alias -s py="python3"

# Shorthand for edit rc files
alias vimrc="nvim ~/.config/nvim/init.vim"
alias zshrc="nvim ~/.zshrc"
alias zsh_alias="nvim ~/.zsh_alias"
alias i3rc="nvim ~/.config/i3/config"
alias polybarrc="nvim ~/.config/polybar/config"

# Alias source zshrc
alias reload="source $HOME/.zshrc"

# Alias reverse proxy with port as arguments
function publish() {
	ssh -nN -R 11227:localhost:"$1" zoelabs
}

# Alias create new python virtualenv
function pyenv() {
	if [ -z "$1" ]; then
		python3 -m venv venv
	else
		python3 -m venv "$1"
	fi
}

# Alias activating python virtualenv on directory
function activate() {
	if [ -z "$1" ]; then
		source ./venv/bin/activate
	else
		source ./$1/bin/activate
	fi
}

function kube_del(){
	if [ -z "1" ]; then
		echo "No Context Found.."
	else
		kubectl config unset users."$1"
		kubectl config unset clusters."$1"
		kubectl config unset contexts."$1"
	fi
}

function tkpssh() {
	if [ $(echo $1 | grep "172.18" | wc -l) -eq 1 ]; then
		ssh -i "/home/laznp/.ssh/office-new-stag.pem" -l root $1
	elif [ $(echo $1 | grep "172.21" | wc -l) -eq 1 ]; then
		ssh -i "~/.ssh/office-prod.pem" -l root $1
	elif [ $(echo $1 | grep "192.168" | wc -l) -eq 1 ]; then
		ssh -i "~/.ssh/office-jenkins.pem" -l root $1
	else
		echo "IP Address not recognize"
	fi
}


[module/vpn]
type = custom/script
exec-if = pgrep -x wg-crypt-wg0
internal = 5
exec = echo "嬨"
format = <label>
format-foreground = ${colors.od-blue}
format-background = ${colors.background-alt}


[module/ping]
type = custom/script
exec = ping -c 1 8.8.8.8 | grep -o 'time=.*' | sed -e 's/time=//g' -e 's/\ //g'
interval = 5
format =  <label>
format-foreground = ${colors.od-purple}
format-background = ${colors.background-alt}


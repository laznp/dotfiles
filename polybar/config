; Custom Modules

[module/archlinux]
type = custom/script
exec = echo ""
interval = once
format = <label>
format-foreground = ${colors.od-blue}
;format-background = ${colors.od-blue}
format-padding = 1

[module/vpn]
type = custom/script
exec-if = pgrep -x wg-crypt-wg0
internal = 5
exec = echo "嬨"
format = <label>
format-foreground = ${colors.od-blue}
;format-background = ${colors.od-blue}
format-padding = 1

[module/ping]
type = custom/script
exec = ping -c 1 8.8.8.8 | grep -o 'time=.*' | sed -e 's/time=//g' -e 's/\ //g'
interval = 5
format =  <label>
format-foreground = ${colors.od-purple}
;format-background = ${colors.od-purple}
format-padding = 1

[module/spotify]
type = custom/script
exec = echo ""
format = <label>
;tail = true
;format-prefix = " "
;format = <label>
;exec = ~/.config/polybar/scripts/scroll_spotify_status.sh
format-foreground = ${colors.od-green}

[module/spotify-prev]
type = custom/script
exec = echo "玲"
format = <label>
click-left = playerctl previous spotify
format-foreground = ${colors.od-yellow}

[module/spotify-play-pause]
type = custom/ipc
hook-0 = echo ""
hook-1 = echo ""
initial = 1
click-left = playerctl play-pause spotify
format = <output>
format-foreground = ${colors.od-yellow}

[module/spotify-next]
type = custom/script
exec = echo "怜"
format = <label>
click-left = playerctl next spotify
format-foreground = ${colors.od-yellow}

[module/pray-remind]
type = custom/script
exec = "$HOME/.config/polybar/scripts/get_pray_time.py"
format =  <label>
format-foreground = ${colors.od-blue}
interval = 30
format-padding = 1

